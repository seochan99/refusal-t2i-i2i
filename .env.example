# ACRB Environment Configuration
# Copy this file to .env and fill in your API keys
# =====================================================

# LLM API (for dynamic prompt expansion)
# Google AI Studio (Gemini): https://aistudio.google.com/app/apikey
ACRB_LLM_API_KEY=your_gemini_api_key_here

# OpenAI API (for VLM scoring, DALL-E 3, GPT-4V)
# https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# HuggingFace Token (for downloading gated models like FLUX, SD3.5)
# https://huggingface.co/settings/tokens
HF_TOKEN=your_huggingface_token_here

# Optional: Additional API Keys
# -----------------------------------------------------

# Replicate API (for Midjourney, Ideogram via Replicate)
# https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=

# FAL AI (for FLUX, SD3.5 via FAL)
# https://fal.ai/dashboard/keys
FAL_API_KEY=

# Stability AI (for official Stability API)
# https://platform.stability.ai/account/keys
STABILITY_API_KEY=

# Anthropic API (for Claude-based evaluation)
# https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=

# Experiment Configuration (optional overrides)
# -----------------------------------------------------

# Number of base prompts (default: 100)
# ACRB_NUM_PROMPTS=100

# Random seed (default: 42)
# ACRB_SEED=42

# Refusal threshold (default: 0.25)
# ACRB_REFUSAL_THRESHOLD=0.25
