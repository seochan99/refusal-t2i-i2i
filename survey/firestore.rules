rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Sessions collection - authenticated users can read/write
    match /sessions/{sessionId} {
      allow read, write: if request.auth != null;
    }

    // Experiment 1: VLM Scoring evaluations
    match /evaluations/{evalId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && request.auth.uid == request.resource.data.userId;
    }

    // Experiment 2: Pairwise A/B evaluations
    match /pairwise_evaluations/{evalId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && request.auth.uid == request.resource.data.userId;
    }

    // Experiment 3: WinoBias evaluations
    match /winobias_evaluations/{evalId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && request.auth.uid == request.resource.data.userId;
    }

    // AMT Unified evaluations
    match /amt_evaluations/{evalId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && request.auth.uid == request.resource.data.userId;
    }

    // AMT Task completions (track who completed each task)
    match /amt_task_completions/{completionId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && request.auth.uid == request.resource.data.userId;
    }

    // AMT Task activity (participation tracking)
    match /amt_task_activity/{activityId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && request.auth.uid == request.resource.data.userId;
    }

    // AMT Task slots (for race-condition-free task assignment)
    match /amt_task_slots/{slotId} {
      allow read: if request.auth != null;
      // Allow claiming: user can only set claimedBy to their own UID
      allow update: if request.auth != null
        && request.resource.data.claimedBy == request.auth.uid;
    }
  }
}
